    <script>
        const form = document.getElementById("registrationForm");
        const button = document.getElementById("sub-button");
    
        // Add an event listener to the form instead of mbnInput
        form.addEventListener("submit", async function (event) {
            const nameInput = document.getElementById("name");
            const mbnInput = document.getElementById("mbn");
            const genderInput = document.getElementById("gender");
            const emailInput = document.getElementById("email");
            const passwordInput = document.getElementById("password");
            const confirmPasswordInput = document.getElementById("conformpassword");
            const nameError = document.getElementById("nameError");
            const mbnError = document.getElementById("mbnError");
            const emailError = document.getElementById("emailError");
            const passwordError = document.getElementById("passwordError");
            const confirmPasswordError = document.getElementById("confirmPasswordError");
    
            let isValid = true;
            const usernamePattern = /^[a-zA-Z0-9_-]{3,16}$/;
            document.getElementById('error-message-name').innerHTML = "";
    
            // Validation for name
            if (nameInput.value.trim() === "") {
                displayErrorMessage("Username is required", "error-message");
                isValid = false;
            } else if (!usernamePattern.test(nameInput.value)) {
                displayErrorMessage("Invalid username format", "error-message");
                isValid = false;
            } else {
                nameError.textContent = "";
            }
    
            // Validation for mobile number (assuming it should be numeric)
            if (!/^\d+$/.test(mbnInput.value)) {
                displayErrorMessage("Mobile number must be numeric", "error-message");
                isValid = false;
            } else {
                mbnError.textContent = "";
            }
    
            // Validation for email (basic format check)
            if (!/^\S+@\S+\.\S+$/.test(emailInput.value)) {
                displayErrorMessage("Invalid email address", "error-message");
                isValid = false;
            } else {
                emailError.textContent = "";
            }
    
            // Validation for password (you can add more complex rules as needed)
            if (passwordInput.value.length < 6) {
                displayErrorMessage("Password must be at least 6 characters", "error-message");
                isValid = false;
            } else {
                passwordError.textContent = "";
            }
    
            // Validation for confirmPassword
            if (confirmPasswordInput.value !== passwordInput.value) {
                displayErrorMessage("Passwords do not match", "error-message");
                isValid = false;
            } else {
                confirmPasswordError.textContent = "";
            }
    
            if (!isValid) {
                event.preventDefault(); // Prevent form submission
            }
        });
    
        function displayErrorMessage(message, elementId) {
            const errorMessage = document.getElementById(elementId);
            errorMessage.textContent = message;
    
            setTimeout(() => {
                errorMessage.textContent = '';
            }, 5000); // Display the message for 5 seconds (5000 milliseconds)
        }
    </script>
    

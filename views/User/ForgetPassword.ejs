        <!--================login_part Area =================-->

        <section class="login_part  ">
            <div class="container ">
                <div class="row align-items-center justify-content-center">

              
                    <div class="col-lg-6 col-md-6">
                        <div class="shadow  bg-white rounded login_part_form"
                            style="background-color: #e8eaf6; border-radius: 30px;">
                            <div class="login_part_form_iner">
                                <h3>Are you forget you password ! <br>
                                    Please enter you email ...</h3>
                                          <!--error messages-->
                                <% if (typeof message !="undefined" ) {%>

                                    <p class="mt-3 text-info ">
                                        <%= message %>
                                    </p>

                                    <%} %>
                                        <!--end messages-->
                                        <% if (success && success.length> 0) { %>
                                            <div class="alert alert-success text-center" id="success-message">
                                                <% success.forEach(function (message) { %>
                                                    <p style="color: rgb(0, 0, 0);">
                                                        <%= message %>
                                                    </p>
                                                    <% }); %>
                                            </div>
                                            <script>
                                                // Add a timeout to hide the success message after 2 seconds (2000 milliseconds)
                                                setTimeout(function () {
                                                    var successMessage = document.getElementById('success-message');
                                                    if (successMessage) {
                                                        successMessage.style.display = 'none';
                                                    }
                                                }, 5000);
                                            </script>
                                            <% } %>
                                <form class="row contact_form" action="/user/forget-password" method="post"
                                    novalidate="novalidate">
                                    <div class="col-md-12 form-group p_star">
                                        <input type="text" class="form-control " id="email" name="email" value=""
                                            placeholder="Email" required>
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <div class="creat_account d-flex align-items-center">
                                            <input type="checkbox" id="f-option" name="selector">
                                            <label for="f-option">Remember me</label>
                                        </div>
                                        <button type="submit" value="submit" class="btn_3">
                                            send
                                        </button>
                                        <a class="lost_pass" href="#">Resend the otp</a>
                                    </div>
                                </form>
                          
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

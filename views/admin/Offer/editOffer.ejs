<%- include('../../partials/Adminside/adminNav') %>
    <div class="container-scroller">
        <%- include('../../partials/Adminside/adminsidepanel') %>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:partials/_navbar.html -->
     
                    <!-- partial -->
                    <div class="main-panel">
                        <div class="content-wrapper">
                            <div class="row">
                                <div class="col-lg-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Edit offers</h4>
                                            <a href="/admin/Offer/">Back</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 grid-margin stretch-card">
                                    <div class="card">
                                      
                                        <div class="card-body">
                                            <% if (error && error.length > 0  ) { %>
                                                <div class="alert alert-danger text-center" id="error-message">
                                                    <% error.forEach(function(message) { %>
                                                        <p><%= message %></p>
                                                    <% }); %>
                                                </div>
                                                <script>
                                                    // Add a timeout to hide the error message after 3 seconds (adjust as needed)
                                                    setTimeout(function() {
                                                        var errorMessage = document.getElementById('error-message');
                                                        if (errorMessage) {
                                                            errorMessage.style.display = 'none';
                                                        }
                                                    }, 3000); // 3000 milliseconds (3 seconds)
                                                </script>
                                            <% } %>
                                            <form action="/admin/offer/edit-save/" method="post">

                                                <input type="hidden" name="offerID" value="<%= findOffer._id %>">
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Offer Name :</label>
                                                    <input type="text" class="form-control" name="name"
                                                        id="exampleInputCity1" value="<%= findOffer.name%>" required>
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Discount  : </label>
                                                    <input type="number" class="form-control" name="discount"
                                                    id="exampleInputCity1" value="<%=findOffer.discount %>"
                                                    required>
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Starting Date :</label>
                                                    <input type="date" class="form-control"
                                                        name="startingDate" id="exampleInputCity1"
                                                        value="<%=findOffer.startingDateFormatted%>" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Expaire Date
                                                        :</label>
                                                    <input type="date" class="form-control" name="expiryDate"
                                                        id="exampleInputCity1"  value="<%=findOffer.expDateFormatted%>"
                                                        required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Status:</label>
                                                    <input type="text" class="form-control" name="status"
                                                        id="exampleInputCity1" value="<%=findOffer.status%>"
                                                        required>
                                                </div>
                                        </div>


                                        <button type="submit" class=" mx-auto btn btn-primary btn-lg mb-4">Add</button>
                                        <div>
                                  
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

            </div>

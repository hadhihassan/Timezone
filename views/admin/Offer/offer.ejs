                                                                    <td>
                                                                        <%= offer.expiryDate.toLocaleDateString() %>
                                                                    </td>
                                                                    <td>
                                                                        <%= offer.discount %>
                                                                    </td>
                                                                    <td>
                                                                        <%= offer.status %>
                                                                        
                                                                    </td>
                                                                    <td>

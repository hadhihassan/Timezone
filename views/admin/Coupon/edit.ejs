<%- include('../../partials/Adminside/adminNav') %>
    <div class="container-scroller">
        <%- include('../../partials/Adminside/adminsidepanel') %>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">
                <!-- partial:partials/_navbar.html -->

                    <!-- partial -->
                    <div class="main-panel">
                        <div class="content-wrapper">
                            <div class="row">
                                <div class="col-lg-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Edit Coupon</h4>
                                            <a href="/admin/Coupon-management">Back to Coupons</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <form action="/admin/coupon/edited" method="post" id="couponForm">

                                                <input type="hidden" name="id" value="<%= findCoupon._id %>">
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Coupon Name :</label>
                                                    <input type="text" class="form-control" value="<%= findCoupon.coupon_name %>" name="couponName"
                                                        id="name" placeholder="Enter Coupon Name" >
                                                </div>

                                                <div id="nameError" style="color: red;"></div>

                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Discount Type : </label>
                                                    <select class="form-control text-white" name="type" id="type">
                                                        <option  selected disabled><%= findCoupon.discount_type%></option>
                                                        <% if (findCoupon.discount_type !== "Percentage") { %>
                                                            <option>Percentage</option>
                                                        <% } %>
                                                        <% if (findCoupon.discount_type !=="Amount") { %>
                                                            <option>Amount</option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div id="typeError" style="color: red;"></div>
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Minimum Purchase Amount :</label>
                                                    <input type="text" class="form-control"
                                                        name="MinimumpurchaseAmount" value="<%= findCoupon.minimumPurchaseAmount %>" id="MinimumpurchaseAmount"
                                                        placeholder="Minimum Purchase Amount" >
                                                </div>
                                                <div id="miError" style="color: red;"></div>
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Discount Amount / Percentage
                                                        :</label>
                                                    <input type="text" class="form-control" value="<%= findCoupon.discount_amount_or_percentage%>" name="amountOrPercentage"
                                                        id="dOrp" placeholder="Amount Or Percentage"
                                                        >
                                                </div>
                                                <div id="amountError" style="color: red;"></div>
                                                <div class="form-group">
                                                    <label for="exampleInputCity1">Description:</label>
                                                    <input type="text" class="form-control" value="<%= findCoupon.description %>" name="Description"
                                                        id="Description" placeholder="Enter the Description"
                                                        required>
                                                </div>
                                                <div id="descriptionErrorMessgae" style="color: red;"></div>
                                        </div>


                                        <button type="submit"
                                            class="col-lg-2 d-grid gap-2 col-6 mx-auto btn btn-primary btn-lg mb-4">Add</button>
                                        <div>
                                            <% if (typeof message !="undefined" ) {%>

                                                <p class="mt-3 text-info ">
                                                    <%= message %>
                                                </p>

                                                <%} %>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- content-wrapper ends -->
                    <!-- partial:../../partials/_footer.html -->


                    <!-- partial -->
            </div>
            <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    </div>
    <%- include('../../partials/Adminside/footer') %>
    <script src="/Admin/validation/couponValidation.js"></script>
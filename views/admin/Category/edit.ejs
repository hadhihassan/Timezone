  <div class="container-scroller">
    <%- include('../../partials/Adminside/adminsidepanel') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->

          <!-- partial -->
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Edit Category</h4>
                      <a href="/admin/product/Category-management">Back to Category</a>
                      </p>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <% if (EditCategory.image.data) { %>
                        <div>
                          <div style="position: relative;">
                            <img
                              src="data:<%= EditCategory.image.contentType %>;base64,<%= EditCategory.image.data.toString('base64') %>"
                              alt="" style="width: 180px;height: 180px;">
                            <a class="btn btn-danger btn-delete-image"
                              href="/admin/category/<%= EditCategory._id %>/images-delete">X</a>
                          </div>

                        </div>
                        <% } %>
                          <br>
                          <form action="/admin/Category/Edit-Category?id=<%= id%>" method="post"
                            enctype="multipart/form-data">

                            <div class="form-group">
                              <label>images upload :</label>
                              <div class="input-group col-xs-12">
                                <input type="file" name="image" class="form-control" id="basic-default-name"
                                  placeholder="Brand name of the product" />
                              </div>

                            </div>

                            <div class="form-group">
                              <label for="exampleInputCity1">Category Name :</label>
                              <input type="text" class="form-control" name="Categoryname"
                                value="<%= EditCategory.categoryName %>" id="exampleInputCity1"
                                placeholder="Category name" required>
                            </div>

                            <div class="form-group">
                              <label for="exampleInputCity1">Offer :</label>
                              <select class="form-control form-control-lg text-white" name="offer" id="offer">
                                <% if (EditCategory.offer) { %>
                                  <option value="" disabled selected><%= EditCategory.offer.name %></option>
                                <% } else {%>
                                  <option value="" disabled selected>No offers</option>
                                  <% } %>
                             
                                <% offers.forEach(element => { %>
                                  <% if (EditCategory.offer) { %>
                                    <% if (element.name !== EditCategory.offer.name ) { %>
                                      <option value="<%= element._id %>"><%= element.name %></option>
                                     <% } %>
                                  <% }else{ %>
                                    <option value="<%= element._id %>"><%= element.name %></option>
                                    <% } %> 
                                <% }) %>
                                <% if (EditCategory.offer) { %>
                                  <option value="Delete">Delete Offer</option>
                                <% } %>
                               
                              </select>
                          
                            </div>


                            <div class="form-group">
                              <label for="exampleInputCity1">Description : </label>
                              <input type="text" class="form-control" name="description"
                                value="<%= EditCategory.description %>" id="exampleInputCity1"
                                placeholder="enter description" required>
                            </div>

                            <button type="submit" class="btn btn-primary mb-4">Edit</button>
                            <div>
                              <% if (typeof message !="undefined" ) {%>

                                <p class="mt-3 text-info ">
                                  <%= message %>
                                </p>

                                <%} %>
                            </div>
                          </form>
                    </div>
                  </div>
                </div>
              </div>

            </div>

            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->

            <footer class="footer">
              <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â©
                  bootstrapdash.com 2020</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a
                    href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin
                    templates</a> from Bootstrapdash.com</span>
              </div>
            </footer>
            <!-- partial -->
          </div>
          <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
  </div>
